{
	"compilerOptions": {
		"module": "commonjs",
		"target": "es2018",
		"outDir": "dist",
		"lib": [
			"ESNext",
			"ESNext.Array",
			"ESNext.AsyncIterable",
			"ESNext.Intl",
			"ESNext.Symbol",
			"DOM"
		],
		"sourceMap": false,
		"inlineSourceMap": true,
		"inlineSources": true,
		"incremental": true,
		"esModuleInterop": true,
		"experimentalDecorators": true,
		"emitDecoratorMetadata": true,
		"resolveJsonModule": true,
		"skipLibCheck": true,
		"strict": true
	},
	"include": ["src/**/*", "index.ts"],
	"exclude": ["node_modules"]
}
